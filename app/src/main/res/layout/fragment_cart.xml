<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3dddd"
    android:orientation="vertical"
    tools:context="online.klok.kot.shopping_cart.CartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".13"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_total_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@android:color/black" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/tv_total_cart_amt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".06"
        android:background="#ffffff"
        android:gravity="end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#e41818" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".08"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="230dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_type"
            android:background="#ffffff"
            android:paddingStart="8dp"
            android:text="Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_type"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:background="@color/background_floating_material_light"
            android:text="Dine-in" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".27"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/etKitchenNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="@string/kitchen_note"
            android:paddingBottom="0dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnSendToKitchen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".08"
        android:backgroundTint="@color/colorPrimary"
        android:text="Send To Kitchen" />

    <TextView
        android:id="@+id/tvNoCartItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3dddd"
        android:gravity="center|top"
        android:padding="20dp"
        android:text="No Items in Cart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>
