<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e3dddd"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="2dp"
        android:paddingStart="6dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#25b025"
            android:padding="7dp">

            <TextView
                android:id="@+id/tv_table"
                android:layout_width="72dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="T2"
                android:textColor="#25b025"
                android:textSize="34sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="2dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="18dp"
                            android:background="@drawable/covers"
                            android:backgroundTint="@color/colorSecondaryText" />

                        <TextView
                            android:id="@+id/tv_covers"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:text="12"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <android.support.v4.widget.Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_width="15dp"
                            android:layout_height="18dp"
                            android:background="@drawable/kot" />

                        <TextView
                            android:id="@+id/tv_kot"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <android.support.v4.widget.Space
                            android:layout_width="28dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#9716; sec's ago"
                            android:textSize="13sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">


                    <android.support.v4.widget.Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit"
                        android:backgroundTint="@color/colorSecondaryText"
                        android:padding="2dp" />

                    <android.support.v4.widget.Space
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:background="@drawable/next" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>